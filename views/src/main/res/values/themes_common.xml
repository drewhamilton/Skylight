<?xml version="1.0" encoding="utf-8"?>
<resources>
  <!-- The themes in this file should be identical save for their parent themes -->
  <style name="SkylightDarkBase" parent="Theme.MaterialComponents">
    <item name="darkThemeColorPrimary">@color/skylight_darkPurple</item>
    <item name="darkThemeColorPrimaryDark">@color/skylight_darkPurple_extraDark</item>
    <item name="darkThemeColorPrimaryVariant">@color/skylight_darkPurple_light</item>
    <item name="darkThemeColorSecondary">@color/darkTheme_secondary</item>
    <item name="darkThemeColorSecondaryVariant">@color/skylight_amber</item>
    <item name="darkThemeColorBackground">@color/darkTheme_background</item>
    <item name="darkThemeColorError">@color/skylight_pink_light</item>

    <item name="lightThemeColorPrimary">@color/skylight_amber</item>
    <item name="lightThemeColorPrimaryDark">@color/skylight_amber_dark</item>
    <item name="lightThemeColorPrimaryVariant">@color/skylight_amber_light</item>
    <item name="lightThemeColorSecondary">@color/lightTheme_secondary</item>
    <item name="lightThemeColorSecondaryVariant">@color/skylight_deepRed_extraLight</item>
    <item name="lightThemeColorBackground">@color/lightTheme_background</item>
    <item name="lightThemeColorError">@color/skylight_pink_dark</item>
  </style>

  <style name="SkylightLightBase" parent="Theme.MaterialComponents.Light">
    <item name="darkThemeColorPrimary">@color/skylight_darkPurple</item>
    <item name="darkThemeColorPrimaryDark">@color/skylight_darkPurple_extraDark</item>
    <item name="darkThemeColorPrimaryVariant">@color/skylight_darkPurple_light</item>
    <item name="darkThemeColorSecondary">@color/darkTheme_secondary</item>
    <item name="darkThemeColorSecondaryVariant">@color/skylight_amber</item>
    <item name="darkThemeColorBackground">@color/darkTheme_background</item>
    <item name="darkThemeColorError">@color/skylight_pink_light</item>

    <item name="lightThemeColorPrimary">@color/skylight_amber</item>
    <item name="lightThemeColorPrimaryDark">@color/skylight_amber_dark</item>
    <item name="lightThemeColorPrimaryVariant">@color/skylight_amber_light</item>
    <item name="lightThemeColorSecondary">@color/lightTheme_secondary</item>
    <item name="lightThemeColorSecondaryVariant">@color/skylight_deepRed_extraLight</item>
    <item name="lightThemeColorBackground">@color/lightTheme_background</item>
    <item name="lightThemeColorError">@color/skylight_pink_dark</item>

  </style>
</resources>
